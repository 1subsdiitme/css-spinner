//- module
borderSize = 4px

@keyframes lds-ripple
  0%
    top: round(size * .5) - borderSize
    left: round(size * .5) - borderSize
    width: 0
    height: 0
    opacity: 1
  100%
    top: round(size * .05) - borderSize
    left: round(size * .05) - borderSize
    width: round(size * .9)
    height: round(size * .9)
    opacity: 0

.lds-ripple
  position: relative
  width: size
  height: size
.lds-ripple div
  position: absolute
  border: borderSize solid color.fg
  opacity: 1
  border-radius: 50%
  animation(lds-ripple 1s cubic-bezier(0, 0.2, 0.8, 1) infinite)
.lds-ripple div:nth-child(2)
  animation-delay(-.5s)
