//- module
borderSize = round(size * .08)

@keyframes lds-dual-ring
  0%
    transform(rotate(0deg))
  100%
    transform(rotate(360deg))
.lds-dual-ring:after
  content: " "
  display: block
  width: round(size * .8 - borderSize)
  height: round(size * .8 - borderSize)
  margin: round(size * .1 - borderSize)
  border-radius: 50%
  border: borderSize solid color.fg
  border-color: color.fg transparent color.fg transparent
  animation(lds-dual-ring speed linear infinite)
